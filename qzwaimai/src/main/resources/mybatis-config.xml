<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="cacheEnabled" value="false"/>
        <setting name="lazyLoadingEnabled" value="true"/>
        <setting name="aggressiveLazyLoading" value="false"/>
        <setting name="multipleResultSetsEnabled" value="true"/>
        <setting name="useColumnLabel" value="true"/>
        <setting name="defaultExecutorType" value="SIMPLE"/>
        <setting name="defaultStatementTimeout" value="5"/>
        <setting name="mapUnderscoreToCamelCase" value="false"/>
        <!-- 是否使用插入数据后自增主键的值，需要配合keyProperty使用 -->
        <!--<setting name="useGeneratedKeys" value="true"/>-->
    </settings>

    <mappers>
        <mapper resource="mapper/WmCategory.xml"/>
        <mapper resource="mapper/WmOrder.xml"/>
        <mapper resource="mapper/WmPoster.xml"/>
        <mapper resource="mapper/WmProduct.xml"/>
        <mapper resource="mapper/Customer.xml"/>
    </mappers>

</configuration>